{
  "name": "rethinkly",
  "version": "1.0.3",
  "description": "a library to make easier the operation handling in rethinkdb",
  "main": "dist/index.js",
  "scripts": {
    "example-bootstrap": "babel-node src/example/bootstrap/",
    "run-example": "babel-node src/example",
    "build": "babel src/ --out-dir dist/ --source-maps --copy-files",
    "test": "ENV=mock ava --verbose",
    "lint": "xo --quiet",
    "lint:format": "xo --quiet --write 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clucasalcantara/rethinkdb-js.git"
  },
  "keywords": [
    "rethinkdb",
    "wrapper",
    "library"
  ],
  "author": "Caio Alcantara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clucasalcantara/rethinkdb-js/issues"
  },
  "homepage": "https://github.com/clucasalcantara/rethinkdb-js#readme",
  "dependencies": {
    "ava": "^1.3.1",
    "rethinkdb": "^2.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/register": "^7.5.5",
    "hoopa-logger": "^1.1.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": [
      "prettier"
    ],
    "globals": [
      "it",
      "describe",
      "before",
      "after",
      "afterEach",
      "assert",
      "sinon",
      "expect"
    ],
    "rules": {
      "prefer-promise-reject-errors": 0,
      "no-use-extend-native/no-use-extend-native": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "prettier --semi false --single-quote --trailing-comma --write",
      "git add"
    ]
  },
  "ava": {
    "files": [
      "src/**/**/**/__tests__/*.spec.js"
    ],
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ]
  }
}
